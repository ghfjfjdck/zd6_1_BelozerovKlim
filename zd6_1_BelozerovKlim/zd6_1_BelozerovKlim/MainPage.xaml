<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zd6_1_BelozerovKlim.MainPage">


    <StackLayout>
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <BoxView Color="Red" WidthRequest="100" HeightRequest="100" HorizontalOptions="FillAndExpand"/>
            <BoxView Color="Black" WidthRequest="100" HeightRequest="100" HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
        <BoxView Color="Green" HeightRequest="100" HorizontalOptions="FillAndExpand"/>
        <BoxView Color="Blue" HeightRequest="100" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        <BoxView Color="Yellow" HeightRequest="100" HorizontalOptions="FillAndExpand"/>
        <BoxView Color="Purple" HeightRequest="100" HorizontalOptions="FillAndExpand"/>
        <BoxView Color="Orange" HeightRequest="100" HorizontalOptions="FillAndExpand"/>
        <BoxView Color="Red" HeightRequest="100" HorizontalOptions="FillAndExpand"/>

        <Button Text="Второй экран" 
                Clicked="OnNavigateButtonClicked"
                HorizontalOptions="Center"/>
    </StackLayout>




</ContentPage>
